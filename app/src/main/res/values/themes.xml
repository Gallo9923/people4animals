<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.People4Animals" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DoneButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/app_blue</item>
    </style>

    <style name="card_title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_description" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:color">@color/app_gray</item>
    </style>

    <style name="SplashPeople4Animals" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="newreporttitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="inputreport" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/app_gray</item>
    </style>

    <style name="input_report_btn" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/app_gray</item>
    </style>

    <style name="button" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>